FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm

# Install dependencies for Alpine Linux
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]
