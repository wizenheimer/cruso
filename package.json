{
    "name": "cruso",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --write .",
        "fmt": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "dev:mastra": "mastra dev --dir mastra",
        "build:mastra": "mastra build --dir mastra",
        "db:generate": "pnpm drizzle-kit generate --config drizzle.config.ts",
        "db:migrate": "pnpm drizzle-kit migrate --config drizzle.config.ts",
        "db:studio": "pnpm drizzle-kit studio --config drizzle.config.ts",
        "db:push": "pnpm drizzle-kit push --config drizzle.config.ts",
        "db:pull": "pnpm drizzle-kit pull --config drizzle.config.ts",
        "docker:build": "docker-compose -f docker-compose.dev.yml build",
        "docker:start": "docker-compose -f docker-compose.dev.yml up -d",
        "docker:stop": "docker-compose -f docker-compose.dev.yml down",
        "docker:restart": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml up -d",
        "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
        "docker:logs:app": "docker-compose -f docker-compose.dev.yml logs -f app",
        "docker:logs:db": "docker-compose -f docker-compose.dev.yml logs -f db",
        "docker:shell": "docker-compose -f docker-compose.dev.yml exec app sh",
        "docker:shell:db": "docker-compose -f docker-compose.dev.yml exec db psql -U postgres -d cruso",
        "docker:status": "docker-compose -f docker-compose.dev.yml ps",
        "docker:clean": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans && docker system prune -f",
        "docker:refresh": "pnpm install && docker-compose -f docker-compose.dev.yml build --no-cache app && docker-compose -f docker-compose.dev.yml up -d",
        "docker:prod:build": "docker-compose build",
        "docker:prod:start": "docker-compose up -d",
        "docker:prod:stop": "docker-compose down",
        "docker:prod:restart": "docker-compose down && docker-compose up -d",
        "docker:prod:logs": "docker-compose logs -f",
        "docker:prod:logs:app": "docker-compose logs -f app",
        "docker:prod:logs:db": "docker-compose logs -f db",
        "docker:prod:shell": "docker-compose exec app sh",
        "docker:prod:shell:db": "docker-compose exec db psql -U postgres -d cruso",
        "docker:prod:status": "docker-compose ps",
        "docker:prod:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
        "prune": "docker system prune -f",
        "prune:all": "docker system prune -a -f --volumes",
        "prune:volumes": "docker volume prune -f",
        "prune:images": "docker image prune -a -f",
        "prune:containers": "docker container prune -f",
        "prune:networks": "docker network prune -f",
        "prune:cache": "docker builder prune -a -f",
        "cleanup": "pnpm prune:all && pnpm store prune",
        "cleanup:full": "pnpm prune:all && pnpm store prune && rm -rf node_modules/.cache && rm -rf .next"
    },
    "dependencies": {
        "@ai-sdk/openai": "^1.3.23",
        "@hono/node-server": "^1.15.0",
        "@hono/zod-validator": "^0.7.0",
        "@mastra/core": "^0.10.14",
        "@mastra/libsql": "^0.11.0",
        "@mastra/loggers": "^0.10.3",
        "@mastra/memory": "^0.11.2",
        "@mastra/pg": "^0.12.2",
        "@radix-ui/react-avatar": "^1.1.10",
        "@radix-ui/react-checkbox": "^1.3.2",
        "@radix-ui/react-dropdown-menu": "^2.1.15",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@tailwindcss/typography": "^0.5.16",
        "better-auth": "^1.2.12",
        "boring-avatars": "^1.11.2",
        "canvas-confetti": "^1.9.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "drizzle-orm": "^0.44.2",
        "drizzle-zod": "^0.8.2",
        "email-addresses": "^5.0.0",
        "form-data": "^4.0.3",
        "framer-motion": "^12.23.0",
        "google-auth-library": "^10.1.0",
        "googleapis": "^150.0.1",
        "gray-matter": "^4.0.3",
        "hono": "^4.8.4",
        "lucide-react": "^0.525.0",
        "mailgun.js": "^12.0.3",
        "mastra": "^0.10.12",
        "next": "15.3.5",
        "next-mdx-remote": "^5.0.0",
        "next-themes": "^0.4.6",
        "postgres": "^3.4.7",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "sonner": "^2.0.6",
        "tailwind-merge": "^3.3.1",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.25.74",
        "zustand": "^5.0.6"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/postcss": "^4",
        "@types/canvas-confetti": "^1.9.0",
        "@types/node": "^20",
        "@types/pg": "^8.15.4",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "autoprefixer": "^10.4.21",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9",
        "eslint-config-next": "15.3.5",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.3.5",
        "typescript": "^5"
    }
}
